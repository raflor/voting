extends layout

block content
  .flex-container
    .flex-item
      if(auth)
        div(style="width:80%;overflow:hidden;margin-left:10%;margin-bottom:-10px")
          if(filter)
            button#filter.btn.btn-default.btn-sm.active(type="button", style="float:right; margin-bottom:5px;")
              |Filter
          else
            button#filter.btn.btn-default.btn-sm(type="button", style="float:right;margin-bottom:5px;",title="Show only your votes")
              |Filter
      #list
        .list-group(role="tablist", id="accordion")
          for poll in polls
            include poll2
    .flex-item
      canvas#myChart(width="400", height="400")
block script
  script(type='text/javascript', src='controllers/voteController.client.js')